<?xml version="1.0" encoding="utf-8"?>
<widget id="com.mendix.widget.custom.badgebutton.BadgeButton" needsEntityContext="true"
    xmlns="http://www.mendix.com/widget/1.0/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../xsd/widget.xsd">
    <name>Badge button</name>
    <description>Badge buttons are numerical indicators of how many items are associated with a link</description>
    <icon>
        
    </icon>
    <properties>
        <property key="label" type="translatableString" required="false">
            <caption>Label</caption>
            <category>Display</category>
            <description>The label to display before the badge/label</description>
        </property>
        <property key="badgeClass" type="enumeration" defaultValue="default">
            <caption>Style</caption>
            <category>Display</category>
            <description>The styling and color of the badge/label using Bootstrap classes</description>
            <enumerationValues>
                <enumerationValue key="default">Default</enumerationValue>
                <enumerationValue key="primary">Primary</enumerationValue>
                <enumerationValue key="success">Success</enumerationValue>
                <enumerationValue key="info">Info</enumerationValue>
                <enumerationValue key="warning">Warning</enumerationValue>
                <enumerationValue key="danger">Danger</enumerationValue>
            </enumerationValues>
        </property>
        <property key="styleAttribute" type="attribute" required="false">
            <caption>Bootstrap style</caption>
            <category>Data source</category>
            <description>Value of attribute should be: info, warning, danger, success. Alternatively use the 'Class' property set Common category</description>
            <attributeTypes>
                <attributeType name="Enum" />
                <attributeType name="String" />
            </attributeTypes>
        </property>
        <property key="labelAttribute" type="attribute" required="false">
            <caption>Label attribute</caption>
            <category>Data source</category>
            <description>The attribute that contains the label for the widget</description>
            <attributeTypes>
                <attributeType name="Enum" />
                <attributeType name="String" />
            </attributeTypes>
        </property>
        <property key="valueAttribute" type="attribute">
            <caption>Data attribute</caption>
            <category>Data source</category>
            <description>The attribute that contains the label/badge value</description>
            <attributeTypes>
                <attributeType name="String" />
                <attributeType name="Integer" />
                <attributeType name="Decimal" />
                <attributeType name="Long" />
            </attributeTypes>
        </property>
        <property key="onClickEvent" type="enumeration" defaultValue="doNothing">
            <caption>On click</caption>
            <category>Events</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="doNothing">Do nothing</enumerationValue>
                <enumerationValue key="showPage">Show a page</enumerationValue>
                <enumerationValue key="callMicroflow">Call a microflow</enumerationValue>
            </enumerationValues>
        </property>
        <property key="microflow" type="microflow" required="false">
            <caption>Microflow</caption>
            <category>Events</category>
            <description>The microflow that will be executed on click</description>
            <returnType type="Void" />
        </property>
        <property key="page" type="form" required="false">
            <caption>Page</caption>
            <category>Events</category>
            <description>The page that will be opened on click</description>
        </property>
        <property key="pageSettings" type="enumeration" defaultValue="popup">
            <caption>Page settings</caption>
            <category>Events</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="content">In content</enumerationValue>
                <enumerationValue key="popup">Pop-up</enumerationValue>
                <enumerationValue key="modal">Blocking pop-up</enumerationValue>
            </enumerationValues>
        </property>
    </properties>
</widget>
